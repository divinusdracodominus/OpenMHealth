<!-- fragment_results_page.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/start_Date_Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Start Date" />

    <EditText
        android:id="@+id/end_Date_Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="End Date" />

    <Button
        android:id="@+id/chooseFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose File" />

    <CheckBox
        android:id="@+id/callDataCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Data" />

    <CheckBox
        android:id="@+id/smsDataCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS Data" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <TextView
        android:id="@+id/summaryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium" />

    <TableLayout
        android:id="@+id/summaryTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
